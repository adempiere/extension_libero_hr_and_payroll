<project name="Libero" default="zkdist" basedir=".">
    <description>
        Building Libero liberoHR.jar
		Building Libero LiberozkHR.jar
    </description>
  <!-- set global properties for this build -->
  <property file="build.properties"/>
  <import file="${adempiere.trunk}/utils_dev/properties.xml"/>
  <property name="src" location="extension/eevolution/libero/src/main"/>
  <property name="patches" location="patches"/>
  <property name="build" location="build"/>
  <property name="buildPatches" location="buildPatches"/>	
  <property name="dist"  location="dist"/>
  <property name="zksrc" value="${basedir}/zkwebui/WEB-INF/src"/>
  <property name="zkclasses" value="${basedir}/WEB-INF/classes"/>

  <path id="lib.class.path">
     <fileset dir="${env.ADEMPIERE_HOME}/lib">
        <include name="*.jar"/>
     </fileset>
  	 <fileset dir="${adempiere.manufacturing}/dist/lib">
  	           <include name="*.jar"/>
  	 </fileset>
  	<fileset dir="${dist}/lib">
  	  	      <include name="*.jar"/>
  	</fileset>
  </path>
	
  <path id="patches.class.path">	
  	<fileset dir="${adempiere.trunk}/lib">
  	      <include name="*.jar"/>
  	</fileset>
   	<fileset dir="${adempiere.manufacturing}/dist/lib">
  	           <include name="*.jar"/>
  	</fileset>
  </path>	
	
 <path id="compile.classpath">
    <pathelement location="${basedir}/build"/>
    <pathelement location="${adempiere.trunk}/zkwebui/WEB-INF/classes"/>
 	 <fileset dir="${adempiere.trunk}/packages">
 	       <include name="*.jar"/>
 	 </fileset>
    <fileset dir="${adempiere.trunk}/lib">
      <include name="*.jar"/>
    </fileset>
    <fileset dir="${adempiere.trunk}/zkwebui/WEB-INF/lib">
      <include name="*.jar"/>
    </fileset>
	<fileset dir="${dist}/lib">
  	      <include name="*.jar"/>
  	</fileset>
  </path>

  <target name="init" depends="clean">
    <echo message="Trunk location: ${adempiere.trunk}"/>
    <echo message="ADempiere home: ${env.ADEMPIERE_HOME}"/>
    <!-- Create the time stamp -->
    <tstamp/>
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
  	<mkdir dir="${buildPatches}"/>
  </target>

  <target name="compile" depends="init"
        description="compile the source " >
    <!-- Compile the java code from ${src} into ${build} -->
    <javac srcdir="${src}" destdir="${build}">
      <exclude name="**/org/eevolution/plugin/*.java"/>
      <classpath refid="lib.class.path"/>
    </javac>
  </target> 	

  <target name="dist" depends="compile"
        description="generate the distribution" >
    <!-- Create the distribution directory -->
    <mkdir dir="${dist}/lib"/>

    <!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
    <jar jarfile="${dist}/lib/liberoHR.jar" basedir="${build}"/>

    <!-- Create target Libero deployment -->
    <mkdir dir="${env.ADEMPIERE_HOME}/packages/liberoHR/lib"/>

    <!-- Transfer liberoHR.jar -->
    <copy file="${dist}/lib/liberoHR.jar" todir="${env.ADEMPIERE_HOME}/packages/liberoHR/lib"/>
    <copy file="${dist}/lib/liberoHR.jar" todir="${adempiere.trunk}/packages"/>

  </target>

  <target name="zkcompile" depends="patchesDist , dist"
        description="compile the source " >
    <mkdir dir="${zkclasses}"/>
    <!-- Compile the zk java code from ${src} into ${zkclasses} -->
    <javac srcdir="${zksrc}" destdir="${zkclasses}">
      <classpath refid="compile.classpath"/>
    </javac>
  </target>

  <target name="zkdist" depends="zkcompile"
        description="generate the distribution" >
    <!-- Create the distribution directory -->
    <mkdir dir="${dist}/lib"/>

    <!-- Put everything in ${zkclasses} into the MyProject-${DSTAMP}.jar file -->
    <jar jarfile="${dist}/lib/liberozkHR.jar" basedir="${basedir}" includes="WEB-INF/"/>

    <!-- Create target Liberozk deployment -->
    <mkdir dir="${env.ADEMPIERE_HOME}/zkpackages/liberozkHR/lib"/>

    <!-- Transfer liberozkHR.jar -->
    <copy file="${dist}/lib/liberozkHR.jar" todir="${env.ADEMPIERE_HOME}/zkpackages/liberozkHR/lib"/>
    <copy file="${dist}/lib/liberozkHR.jar" todir="${adempiere.trunk}/zkpackages/"/>
    <delete dir="${build}"/>
    <delete dir="${buildPatches}"/>
  </target>

	
	 <target name="patchesDist" depends="patchesCompile"
	          description="generate the distribution" >
	      <!-- Create the distribution directory -->
	      <mkdir dir="${dist}/lib"/>

	      <!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
	      <jar jarfile="${dist}/lib/patches.jar" basedir="${buildPatches}"/>
	      <!-- Transfer patchs.jar -->
	      <copy file="${dist}/lib/patches.jar" todir="${adempiere.trunk}/lib"/>

	  </target>
	  
	  <target name="patchesCompile" depends="init"
	        description="compile the source " >
	  	
	    <javac debug="false" srcdir="${patches}" destdir="${buildPatches}">
	      <include name="**/org/eevolution/model/*.java"/>	
	      <include name="**/org/compiere/print/*.java"/>	
	      <classpath refid="patches.class.path"/>
	    </javac>

	  </target>  
  <target name="clean"
        description="clean up" >
    <!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
</project>
